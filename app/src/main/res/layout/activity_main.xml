<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siva.courtcounter.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nba3"
        android:scaleType="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BASKETBALL"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textSize="24dp"
        android:textColor="#000000"
        android:paddingBottom="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORECARD"
        android:textColor="#ff000d"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOSTON CELTICS"
        android:textColor="#52ff00"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:padding="4dp"/>

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="#fff"
        android:padding="4dp"
        android:id="@+id/team_a_score"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+3 Points"
        android:background="#71fd61"
        android:layout_margin="4dp"
        android:onClick="AddthreeforTeamA"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2 Points"
        android:background="#71fd61"
        android:layout_margin="4dp"
        android:onClick="AddtwoforTeamA"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="free throw"
        android:background="#71fd61"
        android:layout_margin="4dp"
        android:onClick="AddoneforTeamA"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="UTAH JAZZ"
            android:textColor="#0022ff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="4dp"/>

        <TextView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:text="0"
            android:textColor="#fff"
            android:padding="4dp"
            android:id="@+id/team_b_score"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 Points"
            android:background="#6e85fc"
            android:layout_margin="4dp"
            android:onClick="AddthreeforTeamB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 Points"
            android:background="#6e85fc"
            android:layout_margin="4dp"
            android:onClick="AddtwoforTeamB"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="free throw"
            android:layout_margin="4dp"
            android:background="#6e85fc"
            android:onClick="AddoneforTeamB"/>


    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="310dp"
        android:text="MATCH IN PROGRESS"
        android:textColor="#f90000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/over" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="game over"
        android:padding="10dp"
        android:background="#ff939e"
        android:layout_marginLeft="140dp"
        android:onClick="gameOver"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:background="#ff939e"
        android:padding="10dp"
        android:layout_marginLeft="140dp"
        android:text="      reset     "
        android:onClick="reset"/>

</RelativeLayout>
